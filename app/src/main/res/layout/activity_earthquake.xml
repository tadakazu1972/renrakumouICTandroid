<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp"
              android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ICT戦略室災害時連絡網"
        android:textColor="#111111"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="データ全件一覧表示"
        android:textSize="20sp"
        android:textColor="#eeeeee"
        android:background="@drawable/data_button"
        android:id="@+id/btnTel"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="■グループ検索"
        android:textColor="#111111"
        android:textSize="20sp"
        android:layout_marginBottom="14dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="以下の条件を設定し「検索」を押してください"
        android:textColor="#111111"
        android:textSize="14sp"
        android:layout_marginBottom="14dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="・○号"
            android:textColor="#111111"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:id="@+id/editKubun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/kubunB"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="・担当"
            android:textColor="#111111"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:id="@+id/editSyozoku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/firestationB"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#111111"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:id="@+id/editSyozoku2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="・参集場所"
            android:textColor="#111111"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:id="@+id/editKinmu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/kinmuB"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="震度６弱以上"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/red_button"
            android:id="@+id/btnEarthquake1"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="震度５強"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/red_button"
            android:id="@+id/btnEarthquake2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="震度５弱"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/red_button"
            android:id="@+id/btnEarthquake3"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="震度４"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/red_button"
            android:id="@+id/btnEarthquake4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="データ操作"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/data_button"
            android:id="@+id/btnData"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="検索"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fefefe"
            android:background="@drawable/orange_button"
            android:id="@+id/btnSearch"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>